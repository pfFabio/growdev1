def calcula(primeiro, segundo, terceiro):
	soma = primeiro + segundo
    print(f"somando o 1ยบ com o 2ยบ resulta em {soma}\ne ao dividir pelo terceiro {soma / terceiro}")

while True:
    primeiro = float(input("me de o primeiro"))
    segundo = float(input("me de o segundo"))
    terceiro = float(input("me de o terceiro"))
    calcula(primeiro, segundo, terceiro)
