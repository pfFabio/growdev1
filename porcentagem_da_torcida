def calcula(x, y, z):
     soma = x + y + z
     print(f"o x time tem {x*100/soma}% da torcida")
     print(f"o y  time tem {y*100/soma}% da torcida")
     print(f"o z time tem {z*100/soma}% da torcida\n")

while True:
    x = int(input("me de a quantidade de torcedores de x"))
    y = int(input("me de a quantidade de torcedores de y"))
    z = int(input("me de a quantidade de torcedores de z"))
    calcula(x, y, z)
