def calcula(x, y, z):
     soma = x + y + z
     print(f"o time x tem {x*100/soma}% da torcida")
     print(f"o time y tem {y*100/soma}% da torcida")
     print(f"o time z tem {z*100/soma}% da torcida\n")

while True:
    x = int(input("me de a quantidade de torcedores de x"))
    y = int(input("me de a quantidade de torcedores de y"))
    z = int(input("me de a quantidade de torcedores de z"))
    calcula(x, y, z)
